---
interface Props {
	title?: string;
}

const { title = "My Portfolio & Blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gray-100">
		<nav class="bg-white shadow-lg">
			<div class="max-w-6xl mx-auto px-4">
				<div class="flex justify-between">
					<div class="flex space-x-7">
						<a href="/" class="flex items-center py-4">
							<span class="font-semibold text-gray-500 text-lg">My Portfolio</span>
						</a>
					</div>
					<div class="flex items-center space-x-4">
						<a href="/blog" class="py-4 px-2 text-gray-500 hover:text-gray-900">Blog</a>
						<a href="/about" class="py-4 px-2 text-gray-500 hover:text-gray-900">About</a>
					</div>
				</div>
			</div>
		</nav>
		<main class="max-w-6xl mx-auto px-4 py-8">
			<slot />
		</main>
	</body>
</html>
