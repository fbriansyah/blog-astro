---
import Layout from '../layouts/Layout.astro';
---

<Layout 
    title="404 - Page Not Found"
    description="The page you're looking for doesn't exist"
>
    <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-4">404 - Page Not Found</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">The page you're looking for doesn't exist or has been moved.</p>
        <a href="/" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">Go Home</a>
    </div>
</Layout>
