---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import DailyQuote from '../components/DailyQuote.astro';

// Get all blog posts and sort by date
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(post => post.data.language === 'en')
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3); // Get only the 3 most recent posts

// Get all unique tags from English posts
const allTags = [...new Set(
  allPosts
    .filter(post => post.data.language === 'en')
    .flatMap(post => post.data.tags || [])
)].sort();

// Get featured portfolio items
const portfolioItems = (await getCollection('portfolio'))
  .filter(item => item.data.language === 'en' && item.data.featured)
  .sort((a, b) => b.data.completionDate.valueOf() - a.data.completionDate.valueOf())
  .slice(0, 3); // Get only the 3 most recent featured items
---

<Layout 
	title="My Portfolio & Blog"
	description="Welcome to my personal portfolio and blog where I share my web development journey and showcase my projects"
>
	<div class="text-center">
		<DailyQuote />

		<div class="max-w-4xl mx-auto">
			<h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Latest Blog Posts</h2>
			<div class="grid gap-6 md:grid-cols-3">
				{posts.map(post => (
					<a href={`/blog/${post.slug}`} class="block group">
						<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
							{post.data.image && (
								<img 
									src={post.data.image} 
									alt={post.data.title}
									class="w-full h-48 object-cover group-hover:opacity-90 transition"
								/>
							)}
							<div class="p-4">
								<h3 class="font-semibold text-gray-800 dark:text-white group-hover:text-blue-500">
									{post.data.title}
								</h3>
								<p class="text-sm text-gray-600 dark:text-gray-300 mt-2">
									{post.data.description}
								</p>
								<p class="text-xs text-gray-500 mt-2">
									{new Date(post.data.publishDate).toLocaleDateString()}
								</p>
							</div>
						</div>
					</a>
				))}
			</div>
		</div>

		<div class="max-w-4xl mx-auto mt-16">
			<h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Post Tags</h2>
			<div class="flex flex-wrap gap-2 justify-center mb-16">
				{allTags.map(tag => (
					<a
						href={`/blog?tag=${tag}`}
						class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-200 rounded-full text-sm hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
					>
						#{tag}
					</a>
				))}
			</div>

			<h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Featured Projects</h2>
			<div class="grid gap-6 md:grid-cols-3">
				{portfolioItems.map(item => (
					<a href={`/portfolio/${item.slug}`} class="block group">
						<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
							<img 
								src={item.data.image} 
								alt={item.data.title}
								class="w-full h-48 object-cover group-hover:opacity-90 transition"
							/>
							<div class="p-4">
								<h3 class="font-semibold text-gray-800 dark:text-white group-hover:text-blue-500">
									{item.data.title}
								</h3>
								<p class="text-sm text-gray-600 dark:text-gray-300 mt-2">
									{item.data.description}
								</p>
								<div class="mt-3 flex flex-wrap gap-2">
									{item.data.technologies.slice(0, 3).map(tech => (
										<span class="text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-2 py-1 rounded">
											{tech}
										</span>
									))}
								</div>
							</div>
						</div>
					</a>
				))}
			</div>
		</div>
	</div>
</Layout>
