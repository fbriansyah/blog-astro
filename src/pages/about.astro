---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get portfolio items
const portfolioItems = await getCollection('portfolio', ({ data }) => {
    return data.language === 'en';
});
---

<Layout 
    title="About Me | My Portfolio"
    description="Learn more about my skills, experience, and projects"
>
    <div class="max-w-6xl mx-auto px-4 space-y-8">
        <!-- Profile Section -->
        <section class="mb-12">
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">About Me</h1>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
                <div class="flex flex-col md:flex-row gap-8 items-center">
                    <img 
                        src="https://avatars.githubusercontent.com/u/14029740?s=400&u=84565adfaa434b1f13aa39bf59e1bce346341b3b&v=4" 
                        alt="Profile Picture" 
                        class="rounded-full w-48 h-48 object-cover"
                    />
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Febriansyah Nuur Rasyiid</h2>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">
                            Full Stack Developer with a passion for creating elegant solutions to complex problems. 
                            I specialize in modern web technologies and love building user-friendly applications.
                        </p>
                        <div class="flex gap-4">
                            <a href="https://github.com/yourusername" target="_blank" class="text-gray-600 dark:text-gray-300 hover:text-blue-500">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                            </a>
                            <a href="https://linkedin.com/in/yourusername" target="_blank" class="text-gray-600 dark:text-gray-300 hover:text-blue-500">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-8">Skills</h2>
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Technical Skills -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Technical Skills</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <h4 class="font-semibold text-gray-700 dark:text-gray-200 mb-2">Frontend</h4>
                            <ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
                                <li>HTML5 & CSS3</li>
                                <li>JavaScript/TypeScript</li>
                                <li>React.js</li>
                                <li>Tailwind CSS</li>
                            </ul>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-700 dark:text-gray-200 mb-2">Backend</h4>
                            <ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
                                <li>Node.js</li>
                                <li>Python</li>
                                <li>SQL</li>
                                <li>RESTful APIs</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Soft Skills -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-10">
                    <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Soft Skills</h3>
                    <ul class="grid grid-cols-2 gap-2 text-gray-600 dark:text-gray-300">
                        <li class="flex items-center">
                            <svg class="w-3 h-3 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                            </svg>
                            Problem Solving
                        </li>
                        <li class="flex items-center">
                            <svg class="w-3 h-3 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                            </svg>
                            Team Collaboration
                        </li>
                        <li class="flex items-center">
                            <svg class="w-3 h-3 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                            </svg>
                            Communication
                        </li>
                        <li class="flex items-center">
                            <svg class="w-3 h-3 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                            </svg>
                            Time Management
                        </li>
                    </ul>
                </div>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section>
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Portfolio</h2>
            <div class="grid md:grid-cols-2 gap-6">
                {portfolioItems.map(item => (
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                        <img 
                            src={item.data.image} 
                            alt={item.data.title}
                            class="w-full h-48 object-cover"
                        />
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">
                                <a href={`/portfolio/${item.slug}`} class="hover:text-blue-500">
                                    {item.data.title}
                                </a>
                            </h3>
                            <p class="text-gray-600 dark:text-gray-300 mb-4">
                                {item.data.description}
                            </p>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {item.data.technologies.map(tech => (
                                    <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded text-sm">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                            <div class="flex gap-4">
                                <a href={`/portfolio/${item.slug}`} class="text-blue-500 hover:text-blue-600">View Details</a>
                                {item.data.demoUrl && (
                                    <a href={item.data.demoUrl} class="text-blue-500 hover:text-blue-600" target="_blank">Demo</a>
                                )}
                                {item.data.githubUrl && (
                                    <a href={item.data.githubUrl} class="text-blue-500 hover:text-blue-600" target="_blank">GitHub</a>
                                )}
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</Layout>
